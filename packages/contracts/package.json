{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "sync:world": "JSON_KEY='address'; ENV_VARIABLE='LOCAL_WORLD_ADDRESS'; VALUE=$(jq -r \".[\\\"31337\\\"].$JSON_KEY\" ../../../world-chain-contracts/mud-contracts/world/worlds.json); grep -q \"^$ENV_VARIABLE=\" .env && sed -i \"s/^$ENV_VARIABLE=.*/$ENV_VARIABLE=$VALUE/\" .env || echo \"$ENV_VARIABLE=$VALUE\" >> .env",
    "build": "mud build",
    "clean": "forge clean && rimraf src/codegen",
    "deploy:garnet": "mud deploy --profile=garnet",
    "deploy:local-world": ". ./.env && pnpm run sync:world && mud deploy --worldAddress $LOCAL_WORLD_ADDRESS",
    "deploy:local": "mud deploy",
    "deploy:redstone": "mud deploy --profile=redstone",
    "dev": "mud dev-contracts",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "tsc --noEmit && mud test",
    "script:createAndMintERC20": ". ./.env && pnpm forge script ./script/CreateMintERC20.s.sol:CreateMintERC20 --broadcast --rpc-url $LOCAL_RPC_URL --chain-id $LOCAL_CHAIN_ID --sig \"run(address)\" $LOCAL_WORLD_ADDRESS -vvv"
  },
  "dependencies": {
    "@latticexyz/cli": "2.0.0-next-17-awakening-9c07ab3a2",
    "@latticexyz/schema-type": "2.0.0-next-17-awakening-9c07ab3a2",
    "@latticexyz/store": "2.0.0-next-17-awakening-9c07ab3a2",
    "@latticexyz/world": "2.0.0-next-17-awakening-9c07ab3a2",
    "@latticexyz/world-modules": "2.0.0-next-17-awakening-9c07ab3a2",
    "openzeppelin-solidity": "^3.4.2"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.0.0-next-17-awakening-9c07ab3a2",
    "solhint-plugin-mud": "2.0.0-next-17-awakening-9c07ab3a2"
  }
}
